---
import BaseLayout from "../layouts/BaseLayout.astro";
import LinkButton from "../components/LinkButton.astro";
---

<BaseLayout>
  <section class="flex flex-col items-center text-center w-full">
    <!-- Combined hero + links container -->
    <div class="flex flex-col items-center justify-center p-8 space-y-6 w-full max-w-md">
      <div class="text-center">
        <h1 class="text-zinc-200 text-4xl font-bold font-geist">Kye Murphy<span class="animate-pulse">_</span></h1>
        <p class="text-zinc-400 text-sm mt-2">Cybersecurity • Hacking • Development</p>
      </div>

      <!-- Link buttons -->
      <div class="flex flex-col mt-10 gap-4 w-full max-w-[18rem] items-center">
        <LinkButton href="#" label="Overview" icon="" />
        <LinkButton href="#" label="Projects" icon="" />
        <LinkButton href="mailto:kye@kyemurphy.com" label="Get in Touch" icon="" />
      </div>
    </div>

    <!-- Socials -->
    <div class="flex gap-10 text-2xl mt-10 text-zinc-400">
      <a href="#" class="hover:text-zinc-200 transition"></a>
      <a href="#" class="hover:text-zinc-200 transition"></a>
      <a href="#" class="hover:text-zinc-200 transition"></a>
    </div>

    <!-- Footer -->
    <footer class="text-xs text-zinc-600 mt-10 text-center leading-relaxed">
    <div class="opacity-80">© {new Date().getFullYear()} Kye Murphy</div>
    <div class="opacity-80">
      Built with 
      <a href="https://astro.build" target="_blank" class="underline hover:text-zinc-200">Astro</a> & 
      <a href="https://tailwindcss.com" target="_blank" class="underline hover:text-zinc-200">Tailwind CSS</a>
    </div>
    </footer>
  </section>
</BaseLayout>